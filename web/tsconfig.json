{
    "compilerOptions": {
        "baseUrl": "./src",
        "rootDir": "./src",
        "outDir": "./build",
        "strict": true,
        "module": "esnext",
        "target": "es5",
        "lib": [
            "es6",
            "dom",
            "esnext.asynciterable"
        ],
        "jsx": "react",
        "sourceMap": true,
        "moduleResolution": "node",
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "types": [
            "node"
        ],
        "typeRoots": [
            "./src/types",
            "react",
            "react-spring",
            "styled-components"
        ]
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "**/node_modules/**/*",
        "**/*.spec.ts"
    ]
}